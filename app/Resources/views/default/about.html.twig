{% extends 'base.html.twig' %}

{% block body %}
<div class="panel panel-primary">
    <header class="panel-heading">
        <div class="text-center xt-heading-top">
            <a class="back-to-search" href="{{ path('homepage') }}">
                <span class="glyphicon glyphicon-chevron-left"></span>
                {{ msg('back') }}
            </a>
            {{ msg('tool-index') }}
        </div>
    </header>

    <div class="panel-body xt-panel-body">
        <div class="col-lg-3 stat-list clearfix">
            <h3>{{ msg('maintainers') }}</h3>
            <ul>
                <li><a href="//en.wikipedia.org/wiki/User:Matthewrbowker" target="_blank">Matthewrbowker</a></li>
                <li><a href="//en.wikipedia.org/wiki/User:MusikAnimal" target="_blank">MusikAnimal</a></li>
                <li><a href="//meta.wikimedia.org/wiki/User:Samwilson" target="_blank">Samwilson</a></li>
            </ul>
        </div>

        <div class="col-lg-3 stat-list clearfix">
            <h3>{{ msg('major-contributors') }}</h3>
            <ul>
                <li><a href="//en.wikipedia.org/wiki/User:Cyberpower678" target="_blank">Cyberpower678</a></li>
                <li><a href="//de.wikipedia.org/wiki/User:Hedonil" target="_blank">Hedonil</a></li>
                <li><a href="//en.wikipedia.org/wiki/User:Matthewrbowker" target="_blank">Matthewrbowker</a></li>
                <li><a href="//en.wikipedia.org/wiki/User:MusikAnimal" target="_blank">MusikAnimal</a></li>
                <li><a href="//meta.wikimedia.org/wiki/User:Samwilson" target="_blank">Samwilson</a></li>
                <li><a href="//en.wikipedia.org/wiki/User:Scottywong" target="_blank">Scottywong</a></li>
                <li><a href="//en.wikipedia.org/wiki/User:TParis" target="_blank">TParis</a></li>
                <li><a href="//en.wikipedia.org/wiki/User:X!" target="_blank">X!</a></li>
            </ul>
        </div>

        <div class="col-lg-6 stat-list clearfix">
            <h3>{{ msg('image-attribution') }}</h3>
            <p>
                {% set logoAuthor = "<a target='_blank' href='https://meta.wikimedia.org/wiki/User:Ricordisamoa'>Ricordisamoa</a>" %}
                {% set wrench = "<a target='_blank' href='https://commons.wikimedia.org/wiki/File:Wrench_icon-72a7cf.svg'>Wikimedia Commons</a>" %}
                {% set wrenchAuthor = "<a target='_blank' href='https://commons.wikimedia.org/wiki/User:Offnfopt'>Offnfopt</a>" %}
                {% set commTech = "<a target='_blank' href='https://www.mediawiki.org/wiki/Community_Tech'>Community Tech</a>" %}
                {{ msg('image-attribution-text', [logoAuthor, wrench, wrenchAuthor, commTech]) }}
            </p>
        </div>

        <hr style="clear:both">
    </div>
</div>
{% endblock %}
