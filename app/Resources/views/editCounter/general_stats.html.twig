{% extends is_sub_request ? 'subrequest.html.twig' : 'base.html.twig' %}

{% block body %}

<div class="row">
    <div class="col-md-6">
        <table class="table-condensed xt-table">
            <tr><td>{{ msg("user-id") }}:</td><td>{{ user.id(project) }}</td></tr>
            <tr class="groups">
                <td><a href="{{ project.url }}/{{ project.scriptPath }}?title=Special:UserRights&user={{ user.username }}">{{ msg("user-groups") }}</a>:</td>
                <td>
                    {% for group in user.groups(project) %}
                        {{ group }}{% if not loop.last %}, {% endif %}
                    {% endfor %}
                    {% if user.globalGroups(project) %}<br />
                        &bull; {{ msg("global-user-groups") }}:
                        {% for group in user.globalGroups %}
                            {{ group }}{% if not loop.last %}, {% endif %}
                        {% endfor %}
                    {% endif %}
                </td>
            </tr>
            <tr><td>{{ msg("first-edit") }}:</td><td>{{ ec.datetimeFirstRevision|date('Y-m-d H:i') }}</td></tr>
            <tr><td>{{ msg("latest-edit") }}:</td><td>{{ ec.datetimeLastRevision|date('Y-m-d H:i') }}</td></tr>
            <tr>
                <td style="border-left:1px solid blue" class="highlighted">{{ msg("live-edits") }}:</td>
                <td class="tdnum">{{ ec.countLiveRevisions|number_format }}</td>
            </tr>
            <tr>
                <td style="border-left:1px solid blue" class="highlighted" >{{ msg("deleted-edits") }}:</td>
                <td class="tdnum">{{ ec.countDeletedRevisions|number_format }}</td>
            </tr>
            <tr>
                <td style="border-left:1px solid blue" class="highlighted" ><strong>{{ msg("total-edits") }}:</strong></td>
                <td class="tdnum"><strong>{{ ec.countAllRevisions|number_format }}</strong></td>
            </tr>
        </table>
    </div>
    <div class="col-md-6">
        <table class="table-condensed xt-table">
            <tr><td>{{ msg("lastday") }}:</td><td class="tdnum" >{{ ec.countRevisionsInLast('day')|number_format }}</td></tr>
            <tr><td>{{ msg("lastweek") }}:</td><td class="tdnum" >{{ ec.countRevisionsInLast('week')|number_format }}</td></tr>
            <tr><td>{{ msg("lastmonth") }}:</td><td class="tdnum" >{{ ec.countRevisionsInLast('month')|number_format }}</td></tr>
            <tr><td>{{ msg("lastyear") }}:</td><td class="tdnum" >{{ ec.countRevisionsInLast('year')|number_format }}</td></tr>
            <tr class="averge-daily-edit-count">
                <td title="{{ ec.days }} {{ msg('num-days', [ec.days]) }}" >{{ msg("avg_edits_per_time_sign", [msg("days", [1])]) }}:</td>
                <td class="tdnum">{{ ec.averageRevisionsPerDay|number_format }}</td>
            </tr>
        </table>
    </div>
</div>

<hr />

<div class="row">
    <div class="col">
        <table class="table-condensed  xt-table">
            <tr><td>{{ msg("live") }}</td><td class="tdnum">{{ ec.countLivePagesEdited|number_format }}</td></tr>
            <tr><td>{{ msg("deleted") }}</td><td class="tdnum">{{ ec.countDeletedPagesEdited|number_format }}</td></tr>
            <tr><td>{{ msg("all") }}</td><td class="tdnum">{{ ec.countAllPagesEdited|number_format }}</td></tr>
            <tr>
                <td>{{ msg("pages_created") }}:</td>
                <td class="tdnum">
                    <a href="{{ path('PagesResult', {project:project.domain, username:user.username, namespace:'all', redirects:'none'}) }}">
                        {{ ec.countPagesCreated|number_format }}
                    </a>
                </td>
            </tr>
            <tr><td>{{ msg("pages_moved") }}:</td><td class="tdnum">{{ ec.countPagesMoved|number_format }}</td></tr>
            <tr>
                <td title="{{ msg("average_per_page") }}">{{ msg("average_per_page_sign") }}</td>
                <td class="tdnum">{{ ec.averageRevisionsPerPage }}</td>
            </tr>
            <tr><td>{{ msg('average_edit_size') }}</td><td class="tdnum">@TODO</td></tr>
            <tr class="rule"><td colspan="2"><hr /></td></tr>
            <tr>
                <td>{{ msg('files_uploaded') }}</td>
                <td class="tdnum" >
                    <a href="//{{ project.url }}/wiki/Special:ListFiles/{{ user.username }}" >{{ ec.countFilesUploaded|number_format }}</a>
                </td>
            </tr>
            {% if is_labs %}
                <tr>
                    <td>{{ msg('files_uploaded_commons') }}</td>
                    <td class="tdnum" >
                        <a href="https://commons.wikimedia.org/wiki/Special:ListFiles/{{ user.username }}" >{{ ec.countFilesUploadedCommons }}</a>
                    </td>
                </tr>
            {% endif %}
            <tr><td>{{ msg('autoedits') }}</td><td><span class="tdgeneral" ><a href="#autoeditslist">{{ ec.countAutomatedRevisions }}</a></span></td></tr>
            <tr><td>Reverted edits:</td><td><span class="tdnum" >@TODO</span></td></tr>
            <tr class="rule"><td colspan="2"><hr /></td></tr>
            <tr><td>{{ msg('edits-with-comment') }}</td><td class="tdnum">{{ ec.countRevisionsWithComments|number_format }}</td></tr>
            <tr><td>{{ msg('minor-edits') }}</td><td class="tdnum">{{ ec.countMinorRevisions|number_format }}</td></tr>
            <tr><td>{{ msg('small-edits') }}</td><td class="tdnum">{{ ec.countSmallRevisions|number_format }}</td></tr>
            <tr><td>{{ msg('large-edits') }}</td><td class="tdnum">{{ ec.countLargeRevisions|number_format }}</td></tr>
        </table>
    </div>
    <div class="col">
        <table class="table-condensed  xt-table">
            <tr><td style="color:gray">{{ msg("actions") }}:</td></tr>
            <tr>
                <td>{{ msg("thank") }}:</td>
                <td class="tdnum">
                    <a href="{{ project.url }}/index.php?title=Special%3ALog&type=thanks&user={{ user.username }}&page=&year=&month=-1&tagfilter=" >
                        {{ ec.thanks }} <small>x</small>
                    </a>
                </td>
            </tr>
            <tr>
                <td>{{ msg("approve") }}:</td>
                <td class="tdnum">
                    <a href="{{ project.url }}/index.php?title=Special%3ALog&type=review&user={{ user.username }}&page=&year=&month=-1&tagfilter=&hide_patrol_log=1&hide_review_log=1&hide_thanks_log=1" >
                        {{ ec.approvals }} <small>x</small>
                    </a>
                </td>
            </tr>
            <tr>
                <td>{{ msg("patrol") }}:</td>
                <td class="tdnum">
                    <a href="{{ project.url }}/index.php?title=Special%3ALog&type=patrol&user={{ user.username }}&page=&year=&month=-1&tagfilter=" >
                        {{ ec.patrols }} <small>x</small>
                    </a>
                </td>
            </tr>
            <tr class="rule"><td colspan=2><hr /></td></tr>
            <tr><td style="color:gray">{{ msg("actions_admin") }}:</td></tr>
            {#<tr><td>{{ msg("block") }}:</td><td><span class="tdgeneral">{{ usersBlocked }} <small>x</small></span></td></tr>#}
