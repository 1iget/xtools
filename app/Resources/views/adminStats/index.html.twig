{% extends 'base.html.twig' %}

{% block body %}
<form class="form-horizontal" style="width:80%; margin:0 auto" action="?" method="get" accept-charset="utf-8" >
    <fieldset>
        <legend></legend>

        <div class="input-group">
            <span class="input-group-addon form-label">Wiki</span>
            <input type="text" class="form-control" name="project">
			<span class="input-group-addon glyphicon glyphicon-info-sign tooltipcss"  >
				<span>
        			<img class="callout" src="../static/images/callout.png" />
        			<strong>Accepted formats :</strong><br />
        			enwiki or en.wikipedia or <br />https://de.wikipedia.org ...
    			</span>
			</span>
        </div>

        <div class="input-group">
            <span class="input-group-addon form-label">Starting date</span>
            <input type="text" class="form-control" placeholder="<optional>" value="2016-11-01" name="begin" >
            <span class="input-group-addon glyphicon glyphicon-info-sign" title="2014-12-31" ></span>
        </div>

        <div class="input-group">
            <span class="input-group-addon form-label">Ending date</span>
            <input type="text" class="form-control" placeholder="<optional>" name="end" >
            <span class="input-group-addon glyphicon glyphicon-info-sign" title="2014-12-31" ></span>
        </div>

        <br />
        <input class="btn btn-large btn-primary" type="submit" value="Submit" />
    </fieldset>
</form>
{% endblock %}
