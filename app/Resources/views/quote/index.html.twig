{% extends 'base.html.twig' %}
{% import 'macros/forms.html.twig' as forms %}

{% block body %}
    <div class="col-lg-12">
        {{ msg("quote_select") }}
        <ul>
            <li><a href="{{ path("bashRandom") }}">{{ msg("quote_random") }}</a></li>
            <li><a href="{{ path("bashAll") }}">{{ msg("quote_showall") }}</a></li>
        </ul>

        <div class="col-lg-2">
            <form class="form-inline" action="{{ path("quote") }}" method="get">
                <div class="form-group">
                    <label for="id">{{ msg("id") }}</label>
                    <input type="text" class="form-control" id="id" name="id">
                </div>
                <input type="submit" class="btn btn-default" value="{{ msg("submit") }}" />
            </form>
        </div>
    </div>
{% endblock %}
