{% extends 'base.html.twig' %}
{% import 'macros/forms.html.twig' as forms %}

{% block body %}
    <form class="col-lg-8 col-lg-offset-2" action="{{ path("pages") }}" method="get" accept-charset="utf-8" >
        <fieldset class="form-fieldset">
            {{ forms.user_input() }}
            {{ forms.wiki_input(project) }}
            {{ forms.namespace_select(namespaces, true) }}
            <div class="input-group">
                <span class="input-group-addon form-label">Redirects</span>
                <select class="form-control" name="redirects">
                    <option value="noredirects" selected>{{ msg('redirfilter_noredirects') }}</option>
                    <option value="none">{{ msg('redirfilter_none') }}</option>
                    <option value="onlyredirects">{{ msg('redirfilter_onlyredirects') }}</option>
                </select>
            </div>
        </fieldset>
        {{ forms.submit_btn() }}
    </form>
{% endblock %}
